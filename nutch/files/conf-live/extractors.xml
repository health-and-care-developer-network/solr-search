<config xmlns="http://bayan.ir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://bayan.ir https://raw.githubusercontent.com/BayanGroup/nutch-custom-search/master/zal-extractor-core/src/main/resources/extractors.xsd">
    <fields>
        <field name="post_title" />
        <field name="post_content" />
        <field name="solr_id" />
        <field name="ID" />
        <field name="permalink" />
        <field name="post_type" />
        <field name="categories" />
        <field name="categories_str" />
        <field name="categories_slug_str" />
    </fields>
    <documents>
	<!-- FHIR Server pages -->
        <document url="^https:\/\/fhir\.nhs\.uk.*" engine="css">
            <extract-to field="post_title">
                <text>
                    <expr value="head > title" />
                </text>
            </extract-to>
            <extract-to field="post_content">
		<attribute name="content">
		    <expr value="#page-description" />
		</attribute>
            </extract-to>
            <extract-to field="solr_id">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="permalink">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="post_type">
		<constant value="fhir" />
            </extract-to>
            <extract-to field="categories">
		<constant value="FHIR Reference Server" />
            </extract-to>
            <extract-to field="categories_str">
		<constant value="FHIR Reference Server" />
            </extract-to>
            <extract-to field="categories_slug_str">
		<constant value="fhir" />
            </extract-to>
        </document>
	<!-- Jekyll Generated pages -->
	<document url="^https:\/\/developer\.nhs\.uk[:]?[0-9\-]*\/apis\/.*" engine="css">
            <extract-to field="post_title">
                <text>
                    <expr value="head > title" />
                </text>
            </extract-to>
            <extract-to field="post_content">
                <text>
                    <expr value="div.post-content" />
                </text>
            </extract-to>
            <extract-to field="solr_id">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="permalink">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="post_type">
		<constant value="APISpec" />
            </extract-to>
            <extract-to field="categories">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_str">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_slug_str">
		<constant value="apispec" />
            </extract-to>
        </document>
	<!-- ITK Specs pages -->
        <document url="^https:\/\/data\.developer\.nhs\.uk[:]?[0-9\-]*\/architecture\/itk.*" engine="css">
            <extract-to field="post_title">
                <text>
                    <expr value="head > title" />
                </text>
            </extract-to>
            <extract-to field="post_content">
		<text>
		    <expr value="div#content" />
                </text>
            </extract-to>
            <extract-to field="solr_id">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="permalink">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="post_type">
		<constant value="APISpec" />
            </extract-to>
            <extract-to field="categories">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_str">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_slug_str">
		<constant value="apispec" />
            </extract-to>
        </document>
	<!-- DMSs -->
        <document url="^https:\/\/data\.developer\.nhs\.uk[:]?[0-9\-]*\/.*" engine="css">
            <extract-to field="post_title">
                <text>
                    <expr value="head > title" />
                </text>
            </extract-to>
            <extract-to field="post_content">
		<text>
		    <expr value="div#segment-content" />
                </text>
            </extract-to>
            <extract-to field="solr_id">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="permalink">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="post_type">
		<constant value="APISpec" />
            </extract-to>
            <extract-to field="categories">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_str">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_slug_str">
		<constant value="apispec" />
            </extract-to>
        </document>
	<!-- Default -->
        <document url=".*" engine="css">
            <extract-to field="post_title">
                <text>
                    <expr value="head > title" />
                </text>
            </extract-to>
            <extract-to field="post_content">
		<text>
		    <expr value="body" />
                </text>
            </extract-to>
            <extract-to field="solr_id">
                <!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="permalink">
		<!-- For some reason, nutch is adding a duff port number into the URL, so remove it -->
		<replace pattern="^(http[s]?:\/\/[a-zA-Z0-9\.\-]*)(:\-1)(\/.*)" substitution="$1$3">
			<url />
		</replace>
            </extract-to>
            <extract-to field="post_type">
		<constant value="APISpec" />
            </extract-to>
            <extract-to field="categories">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_str">
		<constant value="API Specifications" />
            </extract-to>
            <extract-to field="categories_slug_str">
		<constant value="apispec" />
            </extract-to>
        </document>
    </documents>
</config>

